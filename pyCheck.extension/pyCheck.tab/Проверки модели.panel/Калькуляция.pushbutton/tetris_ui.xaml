<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тетрис" Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="Black" WindowStyle="None" ResizeMode="NoResize">

    <Grid>
        <Canvas x:Name="GameCanvas"
                Background="Black"
                Margin="10"
                Width="300" Height="500"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"/>
        
        <TextBlock x:Name="ScoreText"
                   Text="Score: 0"
                   Foreground="White"
                   FontSize="16"
                   Margin="320,10,10,10"
                   VerticalAlignment="Top"/>
        
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Right"
                    Margin="320,50,10,10"
                    VerticalAlignment="Top"
                    Width="70"
                    >
            <Button x:Name="ShopButton" Content="Магазин" Height="30" Margin="0,0,0,5"/>
            <Button x:Name="PauseButton" Content="Пауза" Height="30" Margin="0,0,0,5"/>
            <Button x:Name="ExitButton" Content="Выход" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
